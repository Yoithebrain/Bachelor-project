
    <link rel="stylesheet" href="/editPas.css">


         <header>
        <!--Navbar-->
        {{> mainNav}}
        <!--/.Navbar-->
    </header>
    <br><br><br><br>
        <div class="container">
             {{#if errors }}
                          {{#each errors }}
                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                {{ this.msg }}
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                         {{/each}}
                        {{/if}}
            <section id="content">
               
                <form method="POST"  action="/users/editPassword">
                    <h1>Change Password</h1>
                    <div class="form-group">
                        <label for="Old password"></label>
                        <input class="form-control" name="o_pass" type="password" placeholder="Current Password"  id="username" />
                    </div>
                    <div class="form-group">
                        <label for="New password"></label>
                        <input class="form-control" name="n_pass" type="password" placeholder="New Password"  id="password" />
                    </div>
                     <div>
                         <label for="Re_pass"></label>
                        <input class="form-control" name="n_pass2" type="password" placeholder="Confirm Password" id="password" />
                    </div>
                    <div>
                        <input type="submit" value="Submit" />
                        
                    </div>
                </form><!-- form -->
                <div class="button">
                    <a href="#">Login</a>
                </div><!-- button -->
            </section><!-- content -->
        </div><!-- container -->
        
    